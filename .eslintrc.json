{
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "globals": {
    "OctoPrintClient": true,
    "Log": true
  },
  "rules": {
    "indent": ["error", "tab"],
    "quotes": ["error", "double"],
    "max-len": ["error", 250],
    "curly": "error",
    "camelcase": ["error", {"properties": "never"}],
    "no-trailing-spaces": ["error"],
    "no-irregular-whitespace": ["error"]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jquery": true
  }
}
